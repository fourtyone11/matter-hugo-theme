/* end */
/* elements */
body {
  background-color: var(--bg-color);
}
header {
}
h1,h2,h3,h4,h5,h6 {
  font-family: var(--serif);
  margin-bottom:0;
}
h1 {
  margin-top: calc(2rem + .5vw);
  font-size: var(--text-xxl, 2.074rem);
  line-height: 1.3;
}
h2 {
  margin-top: calc(1.25rem + .5vw);
  font-size: var(--text-xl, 1.728rem);
  line-height: 1.3;
}
h3 {
  margin-top: calc(1rem + .5vw);
  font-size: var(--text-lg, 1.44rem);
  line-height: 1.3;
}
h4 {
  font-size: var(--text-md, 1.2rem);
  line-height: calc(1.3em + (1.5 - 1.3) * ((100vw - 21em)/(35 - 21)))
}
h4,h5,h6 {
  margin-top: 0.8rem;
}
a {
  text-decoration: none;
}
a:visited {
    color: var(--secondary-color);
  }
ul {
  list-style-type: none;
  padding: 0;
}
p {
  margin-top: calc(0.5rem + .5vw);
  margin-bottom: 0;
  line-height: calc(1.5em + .2vw);
}
p code {
    background: var(--link-color-light);
    color: var(--dark-color);
    padding: 0.1rem 0.2rem;
    border-radius: 2px;
  }
section {
  margin-top: 1rem;
}
footer {
  max-width: var(--max-content-width);
  padding-top: 1.5rem;
  padding-bottom: 5rem;
  padding-left: 0.5rem;
  padding-right: 0.5rem;
  margin: 0 auto;
}
@media (min-width: 42rem) {
footer {
    padding-bottom: 1.5rem
}
  }
time {
  margin-top: 0.5rem;
  font-family: var(--monospace);
  display: inline-block;
}
table {
  margin-top: calc(1rem + .5vw);
  border-collapse: collapse;
  empty-cells: show;
  font-size: calc(0.9rem + 0.05vw);
}
tr {
  border-bottom: 1px solid var(--border-color);
}
tr:nth-child(even) {
  background: var(--bg-color-light);
  color: var(--main-color);
}
th {
  padding: 0.5rem 0.8rem;
  color: var(--accent-color);
  background: var(--dark-color);
  text-align: left;
}
td {
  padding: 0.5rem 0.8rem;
}
/* end */
/* objects */
.o-monospace {
  font-family: var(--monospace);
}
.o-root-container {
  margin: 0 auto;
  padding: 1.25rem;
  background-color: var(--main-color);
  box-shadow: 0px 0px 20px 12px var(--shadow-color);
  width: calc(100% - 16px);
  max-width: var(--max-content-width);
  color: var(--secondary-color);
  min-height: calc(100vh - 7.5rem);
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
}
.o-image-wrapper {
  background-color: var(--secondary-color);
}
.o-image-wrapper__picture {
    padding-top: 100%;
    width: 100%;
    background-color: var(--secondary-color);
    position: relative;
    height: auto;
  }
.o-image-wrapper__image {
    object-fit: contain;
    position: absolute;
    width: 100%;
    height: 100%;
    left:0;
    right:0;
    top:0;
    bottom:0;
  }
.o-blog-post-content {
  margin-top: 3rem;
  margin-bottom: 3rem;
}
.o-blog-post-content .highlight {
    margin-top: calc(1rem + 0.5vw);
    border-radius: 6px;
    position: relative;
  }
.o-blog-post-content .highlight code {
      line-height: 1.5;
    }
.o-blog-post-content .highlight code:before {
        border-radius: 6px;
        top: -1.1rem;
        right: 0.5rem;
        position: absolute;
        content: attr(data-lang);
        opacity: 0.7;
        font-size: 1.2rem;
        font-weight: bold;
        font-family: var(--monospace);
      }
.o-blog-post-content .highlight pre {
      border-radius: inherit;
      padding: 0.7rem;
      overflow: auto;
    }
.o-blog-post-content a {
    color: var(--link-color-light);
    border-bottom: 1px solid var(--link-color-light);
  }
.o-blog-post-content a:hover {
      background-color: var(--bg-color-dark);
      border-bottom: 3px solid var(--link-color-light);
    }
.o-blog-post-content a:visited {
      color: var(--link-color-light);
    }
.o-overlay{
  top: 0;
  left:0;
  position: fixed;
  background-color: var(--overlay-color);
  width: 100vw;
  height: 100vh;
}
/* end */
/* components */
.c-header {
  background-color: transparent;
  border-radius: none;
  color: var(--secondary-color);
}
@media (min-width: 42rem) {
.c-header {
    color: var(--main-color);
    box-shadow: 0px 4px 16px 8px hsla(0, 0%, 0%, 0.3);
    padding: 0.5rem 1rem;
    background: var(--secondary-color);
    max-width: 1280px;
    margin: 0 auto;
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: space-between
}
  }
.c-header__site-name {
    font-size: 20px;
    line-height: 1;
    color: var(--secondary-color);
  }
@media (min-width: 42rem) {
.c-header__site-name {
      font-size: 24px;
      color: var(--main-color)
  }
      .c-header__site-name:visited {
        color: var(--main-color);
      }
    }
.c-header__right-side {
    display: none;
  }
@media (min-width: 42rem) {
.c-header__right-side {
      display: flex;
      align-items: center
  }
    }
.u-header-hidden {
  animation-name: hide;
  animation-duration: 400ms;
  animation-timing-function: ease;
  animation-fill-mode: forwards;
}
.u-header-show {
  animation-name: show;
  animation-duration: 400ms;
  animation-timing-function: ease;
}
@keyframes show {
  0% {
    opacity: 0;
    transform: translateY(-100px);
  }
  100% {
    transform: 0;
  }
}
@keyframes hide {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0;
    transform: translateY(-100px);
  }
}
